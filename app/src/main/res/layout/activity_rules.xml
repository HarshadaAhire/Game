<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RulesActivity">

    <TextSwitcher
        android:id="@+id/rules_switch"
        android:layout_width="416dp"
        android:layout_height="301dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/next_rule"
        android:layout_width="137dp"
        android:layout_height="59dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="4dp"
        android:text="Next Rule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rules_switch" />

    <Button
        android:id="@+id/previous_rule"
        android:layout_width="152dp"
        android:layout_height="58dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="192dp"
        android:text="Previous Rule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rules_switch" />

    <Button
        android:id="@+id/start"
        android:layout_width="145dp"
        android:layout_height="53dp"
        android:layout_marginTop="44dp"
        android:text="Continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previous_rule" />

</androidx.constraintlayout.widget.ConstraintLayout>